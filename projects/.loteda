#############
# Loteda Stuff
#############
export LOTEDA_PEM=/Users/gabe/.ssh/loteda-key-pair-useast.pem
function loteda-restart {
  if [ ! -n "$1" ]; then
    echo "Enter environment name"
  else
    bundle exec cap "$1" unicorn:stop PEM=$LOTEDA_PEM && bundle exec cap "$1" unicorn:start PEM=$LOTEDA_PEM && be cap "$1" sidekiq:restart PEM=$LOTEDA_PEM
  fi
}
function loteda-deploy {
  if [ ! -n "$1" ]; then
    echo "Enter environment name"
  else
    bundle exec cap "$1" deploy PEM=$LOTEDA_PEM
  fi
}
